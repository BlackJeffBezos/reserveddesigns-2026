---
import MainLayout from '../layouts/MainLayout.astro';

const serviceTitle = "CAD";
const serviceSubtitle = "SENSATIONS";
const heroImage = "/images/reserved-designs-computer-aided-design-cad-services.avif";
const serviceDescription = "We provide professional CAD services tailored to your needs, we deliver precision and efficiency.";
const excellenceRating = "‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ";
const stats = [
  { number: "25+", label: "PROJECTS COMPLETED" },
  { number: "12+", label: "HAPPY CLIENTS" },
  { number: "5+", label: "YEARS EXPERIENCE" },
  { number: "10+", label: "DAILY INQUIRIES" },
];
const portfolioItems = [
  { title: "DESK CAD DESIGN", image: "/images/reserved-designs-desk-design-2.avif" },
  { title: "WATERBOTTLE CAD DESIGN & RENDER", image: "/images/reserved-designs-cad-bottle.avif" },
  { title: "CAD MODEL", image: "/images/reserved-designs-cad-modelling.avif" },];
---

<MainLayout 
  title="CAD Services - Precision Design to Turn Ideas into Loved Products"
  description="Our CAD services deliver precision and efficiency, transforming ideas into accurate, functional products people love. Have a CAD project? We're here for you."
>

  <!-- Back link -->
  <div class="pt-20 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
    <a href="/services" class="inline-flex items-center text-gray-600 hover:text-primary-pink transition-colors text-sm font-medium">
      ‚Üê ALL SERVICES
    </a>
  </div>

  <!-- Hero Section -->
  <section class="py-12 md:py-20 px-4 sm:px-6 lg:px-8 bg-white">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Left: Text + CTA -->
        <div class="space-y-8">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-xl bg-blue-600 text-white text-3xl font-bold shadow-lg">
            <span>üñ•Ô∏è</span>
          </div>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight uppercase">
            {serviceTitle}<br />
            <span class="text-primary-pink">{serviceSubtitle}</span>
          </h1>

          <p class="text-xl md:text-2xl text-gray-700 max-w-2xl">
            {serviceDescription}
          </p>

          <div class="pt-4">
            <a 
              href="/contact" 
              class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold uppercase px-10 py-5 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 text-lg"
            >
              START YOUR PROJECT
            </a>
          </div>
        </div>

        <!-- Right: Image + Excellence Badge -->
        <div class="relative rounded-3xl overflow-hidden shadow-2xl">
          <img 
            src={heroImage}
            alt="Engineer working on CAD design in advanced lab"
            class="w-full h-full object-cover aspect-[4/3] lg:aspect-square"
            loading="lazy"
          />

          <!-- Floating Excellence Badge -->
          <div class="absolute bottom-6 right-6 bg-white/95 backdrop-blur-sm rounded-xl p-5 shadow-xl border border-gray-200 max-w-[220px]">
            <p class="text-xs md:text-sm font-bold uppercase text-gray-700 mb-2">SERVICE EXCELLENCE</p>
            <div class="flex text-yellow-400 text-xl md:text-2xl">
              {excellenceRating}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Core Capabilities -->
  <section class="py-16 md:py-24 px-4 sm:px-6 lg:px-8 bg-gray-50">
    <div class="max-w-7xl mx-auto text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-16 uppercase">
        CORE <span class="text-primary-pink">CAPABILITIES</span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
        <!-- 3D Modelling -->
        <div class="bg-blue-600 text-white rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl hover:scale-[1.03] transition-all duration-300 flex flex-col h-full">
          <div class="p-10 md:p-12 flex-grow flex flex-col items-center text-center">
            <div class="w-20 h-20 rounded-full bg-white/20 flex items-center justify-center mb-8 text-4xl">
              üñ•Ô∏è
            </div>
            <h3 class="text-2xl md:text-3xl font-bold mb-6 uppercase">
