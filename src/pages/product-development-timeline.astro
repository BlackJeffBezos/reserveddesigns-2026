---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout
  title="Product Development Design - Turn Ideas into Loved Products"
  description="We turn your idea into functional, market-ready everyday product people love. Ready to see what your idea could become? Say hi, we'd love to assist."
>

<!-- Product Development Timeline – Exact Match Style with Mobile Modal -->
<section class="py-16 md:py-24 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-purple-600 via-purple-700 to-purple-800 text-white">
  <div class="max-w-7xl mx-auto">
    <!-- Main Headline -->
    <div class="text-center mb-12 md:mb-16 lg:mb-20">
      <div class="inline-flex items-center justify-center gap-3 md:gap-4">
        <svg class="w-10 h-10 md:w-14 md:h-14 lg:w-16 lg:h-16 text-cyan-300 animate-pulse" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 2v6m0 12v-6M2 12h6m12 0h-6"/>
          <circle cx="12" cy="12" r="10"/>
        </svg>
        <h2 class="
          text-4xl xs:text-5xl sm:text-6xl md:text-7xl lg:text-8xl
          font-black tracking-tight leading-none
        ">
          PRODUCT DEVELOPMENT<br />
          <span class="text-cyan-300">TIMELINE</span>
        </h2>
      </div>
    </div>

    <!-- Vertical Timeline Layout (desktop: left list + right active card) -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-start">
      <!-- Left: Numbered Steps List -->
      <div class="lg:col-span-4 space-y-4 md:space-y-6">
        <div class="
          bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 md:p-8
          cursor-pointer hover:bg-white/20 transition-all duration-300
          group
        " data-step="1">
          <div class="flex items-center gap-4">
            <div class="
              w-12 h-12 md:w-14 md:h-14 rounded-xl bg-cyan-500/80 text-white
              flex items-center justify-center text-2xl md:text-3xl font-bold
            ">
              1
            </div>
            <h3 class="text-xl md:text-2xl font-bold group-hover:text-cyan-300 transition-colors">
              PROBLEM IDENTIFICATION
            </h3>
          </div>
        </div>

        <div class="
          bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 md:p-8
          cursor-pointer hover:bg-white/20 transition-all duration-300
          group
        " data-step="2">
          <div class="flex items-center gap-4">
            <div class="
              w-12 h-12 md:w-14 md:h-14 rounded-xl bg-cyan-500/80 text-white
              flex items-center justify-center text-2xl md:text-3xl font-bold
            ">
              2
            </div>
            <h3 class="text-xl md:text-2xl font-bold group-hover:text-cyan-300 transition-colors">
              RESEARCH
            </h3>
          </div>
        </div>

        <div class="
          bg-cyan-500/30 backdrop-blur-sm border-2 border-cyan-400 rounded-2xl p-6 md:p-8
          cursor-pointer transition-all duration-300
          group
        " data-step="3">
          <div class="flex items-center gap-4">
            <div class="
              w-12 h-12 md:w-14 md:h-14 rounded-xl bg-white text-cyan-600
              flex items-center justify-center text-2xl md:text-3xl font-bold
            ">
              3
            </div>
            <h3 class="text-xl md:text-2xl font-black text-white group-hover:text-cyan-200 transition-colors">
              IDEATE
            </h3>
          </div>
        </div>

        <div class="
          bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 md:p-8
          cursor-pointer hover:bg-white/20 transition-all duration-300
          group
        " data-step="4">
          <div class="flex items-center gap-4">
            <div class="
              w-12 h-12 md:w-14 md:h-14 rounded-xl bg-cyan-500/80 text-white
              flex items-center justify-center text-2xl md:text-3xl font-bold
            ">
              4
            </div>
            <h3 class="text-xl md:text-2xl font-bold group-hover:text-cyan-300 transition-colors">
              PROTOTYPE
            </h3>
          </div>
        </div>

        <div class="
          bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 md:p-8
          cursor-pointer hover:bg-white/20 transition-all duration-300
          group
        " data-step="5">
          <div class="flex items-center gap-4">
            <div class="
              w-12 h-12 md:w-14 md:h-14 rounded-xl bg-cyan-500/80 text-white
              flex items-center justify-center text-2xl md:text-3xl font-bold
            ">
              5
            </div>
            <h3 class="text-xl md:text-2xl font-bold group-hover:text-cyan-300 transition-colors">
              TEST
            </h3>
          </div>
        </div>

        <div class="
          bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 md:p-8
          cursor-pointer hover:bg-white/20 transition-all duration-300
          group
        " data-step="6">
          <div class="flex items-center gap-4">
            <div class="
              w-12 h-12 md:w-14 md:h-14 rounded-xl bg-cyan-500/80 text-white
              flex items-center justify-center text-2xl md:text-3xl font-bold
            ">
              6
            </div>
            <h3 class="text-xl md:text-2xl font-bold group-hover:text-cyan-300 transition-colors">
              IMPLEMENT
            </h3>
          </div>
        </div>

        <div class="
          bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 md:p-8
          cursor-pointer hover:bg-white/20 transition-all duration-300
          group
        " data-step="7">
          <div class="flex items-center gap-4">
            <div class="
              w-12 h-12 md:w-14 md:h-14 rounded-xl bg-cyan-500/80 text-white
              flex items-center justify-center text-2xl md:text-3xl font-bold
            ">
              7
            </div>
            <h3 class="text-xl md:text-2xl font-bold group-hover:text-cyan-300 transition-colors">
              LAUNCH
            </h3>
          </div>
        </div>
      </div>

      <!-- Right: Active Card Content (desktop) / Hidden on mobile -->
      <div class="hidden lg:block lg:col-span-8">
        <div id="active-step-content" class="
          bg-gradient-to-br from-purple-900/80 to-purple-800/80 backdrop-blur-md
          border border-cyan-400/30 rounded-3xl p-8 md:p-10 lg:p-12
          shadow-2xl min-h-[500px] flex flex-col justify-center
        ">
          <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-24 h-24 md:w-32 md:h-32 rounded-2xl bg-cyan-500/20 mb-6">
              <svg id="step-icon" class="w-16 h-16 md:w-20 md:h-20 text-cyan-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <!-- Default icon (lightbulb for Ideate) -->
                <path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
            </div>
            <h3 id="step-title" class="text-3xl md:text-4xl lg:text-5xl font-black text-white mb-6">
              IDEATE
            </h3>
          </div>

          <p id="step-description" class="text-lg md:text-xl lg:text-2xl text-cyan-100 leading-relaxed text-center max-w-3xl mx-auto">
            Brainstorming and sketching multiple concepts.<br />
            We explore various creative directions to find the most impactful solution for your needs.
          </p>
        </div>
      </div>
    </div>

    <!-- Design Thinking Approach Block -->
    <div class="
      mt-16 md:mt-24 lg:mt-32
      bg-gradient-to-br from-purple-900/90 to-pink-900/80 backdrop-blur-lg
      rounded-3xl p-8 md:p-12 lg:p-16 text-center shadow-2xl border border-white/10
    ">
      <h3 class="
        text-3xl md:text-4xl lg:text-5xl
        font-black text-white mb-8 md:mb-10 tracking-wide
      ">
        OUR DESIGN THINKING<br />
        <span class="text-cyan-300">APPROACH</span>
      </h3>

      <p class="
        text-lg sm:text-xl md:text-2xl lg:text-3xl
        text-cyan-100 leading-relaxed max-w-5xl mx-auto
      ">
        We focus on <span class="font-bold text-white">user-centered solutions</span>. Our process involves understanding user needs, redefining problems, brainstorming ideas, prototyping quickly, testing with real users, and refining until we deliver impactful results.<br /><br />
        This ensures that every solution we deliver is <span class="font-bold text-cyan-300">practical, innovative, and tailored to real needs</span>.
      </p>
    </div>
  </div>
</section>

<!-- Mobile Modal (shown when clicking a step on small screens) -->
<div id="mobile-modal" class="
  fixed inset-0 bg-black/70 backdrop-blur-sm z-50
  flex items-center justify-center p-4 hidden
">
  <div class="
    bg-gradient-to-br from-purple-900/95 to-purple-800/95
    rounded-3xl p-6 md:p-8 max-w-lg w-full relative
    border border-cyan-400/30 shadow-2xl
  ">
    <!-- Close Button -->
    <button id="close-modal" class="
      absolute top-4 right-4 w-10 h-10 rounded-full bg-pink-600/80
      flex items-center justify-center text-white text-xl font-bold
      hover:bg-pink-700 transition-colors
    ">
      ×
    </button>

    <!-- Modal Content -->
    <div class="text-center pt-4">
      <div class="inline-flex items-center justify-center w-20 h-20 md:w-24 md:h-24 rounded-2xl bg-cyan-500/20 mb-6 mx-auto">
        <svg id="modal-step-icon" class="w-12 h-12 md:w-16 md:h-16 text-cyan-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <!-- Default lightbulb -->
          <path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
        </svg>
      </div>

      <h3 id="modal-step-title" class="text-3xl md:text-4xl font-black text-white mb-6">
        IDEATE
      </h3>

      <p id="modal-step-description" class="text-lg md:text-xl text-cyan-100 leading-relaxed">
        Brainstorming and sketching multiple concepts.<br />
        We explore various creative directions to find the most impactful solution for your needs.
      </p>
    </div>
  </div>
</div>

<!-- Vanilla JS for Mobile Modal & Step Switching -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const steps = document.querySelectorAll('[data-step]');
    const activeContent = document.getElementById('active-step-content');
    const modal = document.getElementById('mobile-modal');
    const closeModal = document.getElementById('close-modal');
    const modalTitle = document.getElementById('modal-step-title');
    const modalDesc = document.getElementById('modal-step-description');
    const modalIcon = document.getElementById('modal-step-icon');

    // Step content data (you can expand this)
    const stepData = {
      1: {
        title: "PROBLEM IDENTIFICATION",
        desc: "We start by understanding your challenge, defining the real problem to ensure our solutions address the root cause rather than symptoms.",
        icon: `<path d="M12 2v6m0 12v-6M2 12h6m12 0h-6"/> <circle cx="12" cy="12" r="10"/>`
      },
      2: {
        title: "RESEARCH",
        desc: "Deep dive into market trends, competitor analysis, and user behavior to gather insights that drive informed design decisions.",
        icon: `<path d="M12 6v6l4 2"/> <circle cx="12" cy="12" r="10"/>`
      },
      3: {
        title: "IDEATE",
        desc: "Brainstorming and sketching multiple concepts. We explore various creative directions to find the most impactful solution for your needs.",
        icon: `<path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>`
      },
      4: {
        title: "PROTOTYPE",
        desc: "Turning sketches into physical or digital reality. We build low to high-fidelity prototypes to test functionality and form.",
        icon: `<path d="M12 2v4m0 12v4M4 10h4m8 0h4M4 14h4m8 0h4"/>`
      },
      5: {
        title: "TEST",
        desc: "Validating our designs with real users. We gather feedback to identify areas for improvement and ensure the product meets expectations.",
        icon: `<circle cx="12" cy="12" r="10"/> <path d="M12 8v4l3 3"/>`
      },
      6: {
        title: "IMPLEMENT",
        desc: "Refining the design for production. We prepare technical documentation, CAD files, and manufacturing specifications.",
        icon: `<path d="M12 2v20M2 12h20"/>`
      },
      7: {
        title: "LAUNCH",
        desc: "Assisting with the final market rollout. From packaging to strategy, we ensure your product makes a sensation on arrival.",
        icon: `<path d="M12 2v6m0 12v-6M2 12h6m12 0h-6"/> <circle cx="12" cy="12" r="10"/>`
      }
    };

    // Desktop: Click to update right panel
    steps.forEach(step => {
      step.addEventListener('click', () => {
        const stepNum = step.dataset.step;
        const data = stepData[stepNum];

        // Update desktop content
        document.getElementById('step-title').textContent = data.title;
        document.getElementById('step-description').textContent = data.desc;
        document.getElementById('step-icon').innerHTML = data.icon;

        // Highlight active step
        steps.forEach(s => s.classList.remove('bg-cyan-500/30', 'border-cyan-400'));
        step.classList.add('bg-cyan-500/30', 'border-cyan-400');
      });
    });

    // Mobile: Click opens modal
    if (window.innerWidth < 1024) {
      steps.forEach(step => {
        step.addEventListener('click', () => {
          const stepNum = step.dataset.step;
          const data = stepData[stepNum];

          modalTitle.textContent = data.title;
          modalDesc.textContent = data.desc;
          modalIcon.innerHTML = data.icon;

          modal.classList.remove('hidden');
          document.body.style.overflow = 'hidden';
        });
      });
    }

    // Close modal
    closeModal.addEventListener('click', () => {
      modal.classList.add('hidden');
      document.body.style.overflow = '';
    });

    // Close modal on outside click
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.classList.add('hidden');
        document.body.style.overflow = '';
      }
    });
  });
</script>

</MainLayout>