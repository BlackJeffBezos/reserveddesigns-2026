<style>
  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }
  .animate-blink {
    animation: blink 1s step-end infinite;
  }

  @keyframes float-slow {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(40px, -40px); }
  }
  @keyframes float-slower {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(-50px, 60px); }
  }
  .animate-float-slow {
    animation: float-slow 18s ease-in-out infinite;
  }
  .animate-float-slower {
    animation: float-slower 24s ease-in-out infinite;
  }
</style>

<script>
  const words = [
    "FUN TOYS",
    "AWESOME GADGETS",
    "UNFORGETTABLE BRANDS",
    "EXCELLENT WEBSITES",
    "CRAZY IDEAS"
  ];

  const strip = document.getElementById('typing-strip');
  const cursor = document.getElementById('cursor');

  let wordIndex = 0;
  let charIndex = 0;
  let isDeleting = false;

  function type() {
    const currentWord = words[wordIndex];

    if (isDeleting) {
      // Delete characters
      strip.textContent = currentWord.substring(0, charIndex - 1);
      charIndex--;
    } else {
      // Type characters
      strip.textContent = currentWord.substring(0, charIndex + 1);
      charIndex++;
    }

    // Speed control
    let speed = isDeleting ? 60 : 100;

    // When word is fully typed → pause then delete
    if (!isDeleting && charIndex === currentWord.length) {
      speed = 1500; // pause at end
      isDeleting = true;
    }

    // When word is fully deleted → move to next word
    if (isDeleting && charIndex === 0) {
      isDeleting = false;
      wordIndex = (wordIndex + 1) % words.length;
      speed = 400; // small delay before typing next
    }

    setTimeout(type, speed);
  }

  // Start animation after page load
  document.addEventListener('DOMContentLoaded', () => {
    type();
  });
</script>


