---
// BlogCard.astro
// Props let you customize every card individually

const {
  href,                    // required: link to the blog post
  imageSrc,                // required: main image
  imageAlt = "Blog post image",
  category,                // e.g. "Entrepreneurship"
  readTime = "3 min read",
  title,                   // main headline
  excerpt,                 // short description
  buttonText = "Explore Deep →",
  className = "",          // optional extra classes
} = Astro.props;
---

<a
  href={href}
  class={`
    group block rounded-2xl overflow-hidden
    border-2 border-primary-pink/30 hover:border-primary-pink/60
    transition-all duration-300 hover:shadow-2xl hover:scale-[1.015]
    bg-white ${className}
  `}
>
  <div class="relative aspect-[4/3] overflow-hidden">
    <img
      src={imageSrc}
      alt={imageAlt}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-60 group-hover:opacity-70 transition-opacity"></div>
  </div>

  <div class="p-6 md:p-8">
    <!-- Meta row -->
    <div class="flex items-center gap-3 mb-4 text-sm font-medium uppercase tracking-wide">
      {category && <span class="text-primary-pink">{category}</span>}
      {category && readTime && <span class="text-gray-500">•</span>}
      {readTime && <span class="text-gray-600">{readTime}</span>}
    </div>

    <!-- Title -->
    <h3 class="
      text-xl md:text-2xl font-bold leading-tight mb-4
      group-hover:text-primary-pink transition-colors
    ">
      {title}
    </h3>

    <!-- Excerpt -->
    <p class="text-gray-700 text-base leading-relaxed line-clamp-3 mb-6">
      {excerpt}
    </p>

    <!-- Black "Explore Deep" button -->
    <div class="mt-auto">
      <span class="
        inline-flex items-center gap-2
        bg-black hover:bg-gray-900
        text-white font-medium
        px-6 py-3 rounded-lg text-base
        transition-all duration-300
        group-hover:translate-x-1
      ">
        {buttonText}
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </span>
    </div>
  </div>
</a>