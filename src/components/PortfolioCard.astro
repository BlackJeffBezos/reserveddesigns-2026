---
/**
 * PortfolioCard.astro – Reusable featured portfolio item
 *
 * Props:
 * - href: string (Canva/design link)
 * - imageSrc: string (image URL)
 * - imageAlt: string (alt text)
 * - category: string (e.g. "PRODUCT DESIGN")
 * - categoryColor: string (e.g. "blue-600" or "pink-600")
 * - borderColor: string (e.g. "blue-500/30" or "pink-500/30")
 * - title: string (project name, uppercase)
 * - description: string
 * - partnerLabel: string (default "PARTNER")
 * - partnerName: string
 * - animationDelay: string (optional, e.g. "0.1s")
 */

const {
  href,
  imageSrc,
  imageAlt = "Project showcase",
  category,
  categoryColor = "blue-600",
  borderColor = "blue-500/30",
  title,
  description,
  partnerLabel = "PARTNER",
  partnerName,
  animationDelay = "0s",
} = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={`
    group block relative rounded-2xl overflow-hidden
    shadow-lg hover:shadow-2xl hover:scale-[1.02]
    transition-all duration-300 animate-on-scroll
    bg-white border-2 border-${borderColor}
  `}
  style={`animation-delay: ${animationDelay};`}
>
  <div class="relative">
    <!-- Category tag (top-right) -->
    <span class={`
      absolute top-4 right-4 z-20
      bg-${categoryColor} text-black
      text-xs md:text-sm font-bold uppercase
      px-4 py-2 rounded-full shadow-md
    `}>
      {category}
    </span>

    <!-- Image -->
    <div class="aspect-[4/3] md:aspect-video overflow-hidden">
      <img
        src={imageSrc}
        alt={imageAlt}
        class="
          w-full h-full object-cover
          transition-transform duration-500
          group-hover:scale-105
        "
        loading="lazy"
      />
    </div>

    <!-- Content (always visible) -->
    <div class="p-6 md:p-8 to-transparent text-black">
      <h3 class="text-2xl md:text-3xl font-display font-bold mb-3">
        {title}
      </h3>

      <p class="text-black text-base md:text-lg mb-6 leading-relaxed">
        {description}
      </p>

      <div class="flex items-center justify-between text-sm md:text-base">
        <div>
          <span class="text-primary-pink font-bold uppercase text-xs tracking-wider">
            {partnerLabel}
          </span>
          <p class="font-medium">{partnerName}</p>
        </div>

        <span class="
          inline-flex items-center font-bold
          text-primary-pink group-hover:text-primary-pink/80
          transition-colors
        ">
          EXPLORE →
        </span>
      </div>
    </div>
  </div>
</a>